{
  "name": "Кашка Вкашка",
  "description": "Расширение для поиска и анализа информации ВК",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_icon": {
      "16": "https://raw.githubusercontent.com/ludkich/Kashka/master/images/logo16.png",
      "32": "https://raw.githubusercontent.com/ludkich/Kashka/master/images/logo32.png",
      "48": "https://raw.githubusercontent.com/ludkich/Kashka/master/images/logo48.png",
      "128": "https://raw.githubusercontent.com/ludkich/Kashka/master/images/logo128.png"
      },
    "default_popup": "https://raw.githubusercontent.com/ludkich/Kashka/master/popup.html"
    },
  "icons": {
    "16": "https://raw.githubusercontent.com/ludkich/Kashka/master/images/logo16.png",
    "32": "https://raw.githubusercontent.com/ludkich/Kashka/master/images/logo32.png",
    "48": "https://raw.githubusercontent.com/ludkich/Kashka/master/images/logo48.png",
    "128": "https://raw.githubusercontent.com/ludkich/Kashka/master/images/logo128.png"
  },
  "permissions": ["activeTab", "tabs", "storage"],
  "content_scripts": [
    { "js": [
        "https://raw.githubusercontent.com/ludkich/Kashka/master/assets/jquery-3.6.0.min.js",
        "/assets/notify.js",
        "/assets/js/func.js",
        "/assets/js/listener.js",
        "/assets/js/profile_info.js",
        "/assets/js/save.js",
        "/assets/js/run_request.js"
        ],
      "matches": ["https://vk.com/*"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [ "/assets/vk_city.json" ],
      "matches": ["https://vk.com/*"]
    }
  ]
}
